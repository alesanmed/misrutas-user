{
  "name": "ms-user",
  "version": "0.0.1",
  "description": "User microservice for MisRutas project",
  "author": "Ale Sanchez <alesanchezmedina@gmail.com>",
  "repository": {
    "url": "https://github.com/alesanmed/misrutas-user.git"
  },
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "seed": "ts-node -r tsconfig-paths/register src/user/seeder/seed.ts",
    "update": "npm-check -u"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.7",
    "@nestjs/config": "^0.4.0",
    "@nestjs/core": "^7.0.7",
    "@nestjs/microservices": "^7.0.7",
    "@nestjs/platform-express": "^7.0.7",
    "@nestjs/typeorm": "^7.0.0",
    "bcrypt": "^4.0.1",
    "class-validator": "^0.11.1",
    "helmet": "^3.22.0",
    "nats": "^1.4.8",
    "pg": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.4",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.1.1",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.7",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.2",
    "@types/faker": "^4.1.11",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.8",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "faker": "^4.1.0",
    "jest": "^25.2.4",
    "npm-check": "^5.9.2",
    "prettier": "^2.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.3.0",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.8.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
